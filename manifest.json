{
  "name" : "豆瓣语音助手",
  "manifest_version": 2,
  "version" : "0.3",
  "description" : "语音Voice,折叠话题、屏蔽话题、屏蔽用户发言、收藏用户发言、屏蔽东西、屏蔽豆瓣猜",
  "browser_action": {
      "default_icon": "doubanicon-24.png",
      "default_title": "语音Voice,折叠话题、屏蔽话题、屏蔽用户发言、收藏用户发言、屏蔽东西、屏蔽豆瓣猜"
  },
  "icons": { "16": "icon-voice-16.png",
           "48": "icon-voice-48.png",
          "128": "icon-voice-128.png" },
  "background": {
     "scripts": ["lib/jquery-1.7.2.min.js",
                 "lib/underscore-min.js",
                 "douban/voice/common.js",
                 "douban/voice/webSqlWarpper.js",
                 "douban/voice/savToSina.js",              
                 "douban/voice/bg.js"]
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.douban.com/update/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "douban/common.js",
              "douban/menu.js",
              "douban/filter.js",
              "douban/grouper.js",
              "douban/tag/fav.js",
              "douban/voice/voice.js",
              "douban/timezone.js",
              "douban/imageEditor/pixastic.custom.js",
              "douban/clipboard/savTodoubanImgServer.js",              
              "douban/clipboard.js",                            
              "douban/update.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://www.douban.com/group/topic/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js","douban/group/group.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },   
    {
      "matches" : [
        "http://www.douban.com/contacts/blacklist"
      ],
      "js" : ["lib/jquery-1.7.2.min.js","douban/blacklist.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },    
    {
      "matches" : [
        "http://www.douban.com/people/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js",
              "douban/tag/tagsView.js",
              "douban/timezone.js",              
              "douban/seeAlso/seeAlso.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://t.qq.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js"
              ,"tqq/tqq.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://weibo.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js"
              ,"weibo/weibo.js"],
      "run_at" : "document_end",
      "all_frames" : false
    },
    {
      "matches" : [
        "http://guide.renren.com/*"
      ],
      "js" : ["lib/jquery-1.7.2.min.js",
              "lib/underscore-min.js",
              "renren/renren.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "background",
        "unlimitedStorage",
        "http://www.douban.com/*",
        "http://www.douban.com/people/*",
        "http://api.douban.com/people/*",
        "http://t.qq.com/*",
        "http://weibo.com/*",
        "http://guide.renren.com/*",
        "http://img1.douban.com/*",
        "http://1.lemonvoice.sinaapp.com/",
        "http://localhost:8080/"
    ],
    "web_accessible_resources": [
        "images/ico-voice.gif",
        "images/tqq_voice.png",
        "test.wav"
    ]    
}
